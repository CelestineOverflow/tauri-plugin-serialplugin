{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noEmit": true,
    "types": ["jest", "node"],
    "esModuleInterop": true
  },
  "include": ["guest-js/**/*.ts"],
  "exclude": ["dist-js", "node_modules", "test/types", "examples", "target"]
}